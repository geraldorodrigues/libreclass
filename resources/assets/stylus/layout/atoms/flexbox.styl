// Flexbox
.flex
	display: flex

.flex-inline
	display: inline-flex;

.flex-column
	flex-direction: column

.flex-row
	flex-direction: row

.flex-inline
	display: inline-flex

.flex-item-lg
	flex-basis: 47%

.flex-item-sm
	flex-basis: 20%

.space-between
	justify-content: space-between


.center
	align-items: center
	justify-content: center

.center-left
	align-items: center
	justify-content: flex-start

.center-right
	align-items: center
	justify-content: flex-end

.bottom-left
	align-items: flex-end
	justify-content: flex-start


.self-top
	align-self: flex-start

.self-button
	align-self: flex-end

.self-center
	align-self: center

.full-v
	align-items: stretch

.grow
	flex-grow: 1

.grow-2x
	flex-grow: 2

.wrap
	flex-wrap: wrap

.nowrap
	flex-wrap: nowrap
