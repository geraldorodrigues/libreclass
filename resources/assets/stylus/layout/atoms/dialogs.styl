.dialog-overlay
	position: fixed
	z-index: 120
	top: 0
	left: 0
	right: 0
	height: 100%
	opacity: 0.6
	background-color: #000


.dialog
	width: 380px
	/*position: absolute*/
	position: fixed
	z-index: 121
	background-color: #fff
	border-radius: 1px

	.dialog-header
		padding: 15px
		font-size: 1.1em
		font-weight: 600

	.dialog-body
		padding: 20px 15px
		font-size: 1.0em
		color: #313131
		text-align: justify

	.dialog-footer
		padding-top: 15px
		border: none
		outline: 0px

 .btn-flat.btn-block
		margin-bottom: 0px
		width: 100%

	.btn-flat
		float: left
		width: 50%
		background: transparent
		font-weight: bold
		border:none
		padding: 10px 0px
		font-size: 11pt
		border: none
	  outline: none

 	 	&:hover,
		&:focus,
		&:active,
		&:click
			border:none
			-webkit-box-shadow:none
			box-shadow:none
			outline: 0
			outline-offset: 0


@media screen and (max-width: 480px)
	.dialog
		width: 90%
		/*position: absolute*/
		position: fixed
		z-index: 1010
		background-color: #fff
		border-radius: 1px
		z-index: 200
