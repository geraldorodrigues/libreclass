.card
	border: 1px solid $color-grey--light
	background: $color-white

	&.card--radius
		border-radius: 4px

		.card__header
			border-radius: 4px 4px 0 0

	.card__header
		padding: 11px 20px
		box-shadow: 0px 3px 0px 0 $color-grey

	.card__body
		padding: 15px 20px
		font-size: 14px

	.card__footer
		font-size: 11px
		border-top: 1px solid $color-grey
		padding: 7px 0
