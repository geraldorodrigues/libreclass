.side-menu
	list-style: none
	margin: 0
	padding: 0

	.side-menu__item
		cursor: pointer

		a
			display: block
			padding: 10px 15px
			text-decoration: none
			color: $color-dark
			outline: 0

		&:hover
			background-color: $color-primary
			transition: 0.3s

		&.selected
			background-color: $color-primary
			a
				color: $color-white
